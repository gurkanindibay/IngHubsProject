# Docker Environment Configuration for Digital Wallet Service

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
JAVA_OPTS=-Xmx512m -Xms256m

# Database Configuration (H2 File-based)
SPRING_DATASOURCE_URL=jdbc:h2:file:/app/data/walletdb;DB_CLOSE_ON_EXIT=FALSE;AUTO_RECONNECT=TRUE
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=password

# JWT Configuration
JWT_SECRET=dockerSecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000

# SSL Configuration
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=/app/keystore.p12
SERVER_SSL_KEY_STORE_PASSWORD=changeit
SERVER_SSL_KEY_ALIAS=wallet-service

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorized

# CORS Configuration
APP_CORS_ENABLED=true
APP_CORS_ALLOWED_ORIGINS=https://localhost:8080

# Logging Configuration
LOGGING_LEVEL_COM_ING_WALLETSERVICE=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=INFO
